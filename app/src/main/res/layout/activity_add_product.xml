<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".admin.AddProductActivity" android:id="@+id/constraint" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton android:id="@+id/imageButton" android:layout_height="48dp" android:layout_width="wrap_content" app:srcCompat="@drawable/baseline_camera_alt_24" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"/>

    <EditText android:id="@+id/etProdName" android:layout_height="48dp" android:layout_width="match_parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageButton" android:textAlignment="center" android:hint="name" android:inputType="textPersonName" android:ems="10"/>

    <EditText android:id="@+id/etDesc" android:layout_height="48dp" android:layout_width="match_parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etProdName" android:textAlignment="center" android:hint="description" android:inputType="textPersonName" android:ems="10"/>

    <EditText android:id="@+id/etStock" android:layout_height="48dp" android:layout_width="match_parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etDesc" android:textAlignment="center" android:hint="Stock" android:inputType="numberDecimal" android:ems="10"/>

    <EditText android:id="@+id/etSalePrice" android:layout_height="48dp" android:layout_width="match_parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="43dp" app:layout_constraintTop_toBottomOf="@+id/etStock" android:textAlignment="center" android:hint="Sale Price" android:inputType="numberDecimal" android:ems="10"/>

    <EditText android:id="@+id/etBuyPrice" android:layout_height="48dp" android:layout_width="match_parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="31dp" app:layout_constraintTop_toBottomOf="@+id/etSalePrice" android:textAlignment="center" android:hint="Buy Price" android:inputType="numberDecimal" android:ems="10"/>

    <Button android:id="@+id/addButton" android:layout_height="wrap_content" android:layout_width="140dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="66dp" app:layout_constraintTop_toBottomOf="@+id/etBuyPrice" app:layout_constraintHorizontal_bias="0.498" android:textColor="#fff" android:text="add"/>

    <ProgressBar android:id="@+id/addItemProgressBar" android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/etBuyPrice" android:visibility="gone" style="?android:attr/progressBarStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>